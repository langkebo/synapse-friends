# Synapse 日志配置文件 - Supabase 版本

version: 1

formatters:
  precise:
    format: '%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(request)s - %(message)s'
  
  json:
    format: '{"timestamp": "%(asctime)s", "logger": "%(name)s", "line": %(lineno)d, "level": "%(levelname)s", "request": "%(request)s", "message": "%(message)s"}'
    
  console:
    format: '%(asctime)s [%(levelname)s] %(name)s: %(message)s'

handlers:
  file:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: precise
    filename: /logs/homeserver.log
    when: midnight
    interval: 1
    backupCount: 7
    encoding: utf8
    
  console:
    class: logging.StreamHandler
    formatter: console
    stream: ext://sys.stdout
    
  error_file:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: json
    filename: /logs/error.log
    when: midnight
    interval: 1
    backupCount: 30
    encoding: utf8
    level: ERROR
    
  friends_file:
    class: logging.handlers.TimedRotatingFileHandler
    formatter: precise
    filename: /logs/friends.log
    when: midnight
    interval: 1
    backupCount: 7
    encoding: utf8

loggers:
  synapse.storage.SQL:
    level: INFO
    
  synapse.access.http:
    level: INFO
    
  synapse.handlers.friends:
    level: DEBUG
    handlers: [friends_file]
    propagate: false
    
  synapse.rest.client.friends:
    level: DEBUG
    handlers: [friends_file]
    propagate: false
    
  synapse.storage.databases.main.friends:
    level: DEBUG
    handlers: [friends_file]
    propagate: false
    
  synapse.federation:
    level: INFO
    
  synapse.http.server:
    level: INFO
    
  synapse.metrics:
    level: WARNING
    
  synapse.util.caches:
    level: WARNING
    
  twisted:
    level: WARNING
    
  requests.packages.urllib3:
    level: WARNING
    
  urllib3.connectionpool:
    level: WARNING

root:
  level: INFO
  handlers: [file, console, error_file]

disable_existing_loggers: false